<div class="grid-row">
  <div class="grid-col-12">
    <%= render "shared/nav_breadcrumbs", object: [["Benthic Cover Categories", ""]] %>

    <ul class="usa-button-group margin-bottom-1">
      <li class="usa-button-group__item">
        <%= link_to new_cover_cat_path, class: "new-cover-cat-button usa-button" do %>
          <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
            <%= tag.use href: image_path("@uswds/uswds/dist/img/sprite.svg#add") %>
          </svg>
          New Cover Category
        <%- end %>
      </li>
    </ul>

    <table class="width-full display">
      <thead>
        <tr>
          <th scope="col">Code</th>
          <th scope="col">Name</th>
          <th scope="col">Proofing Code</th>
          <th scope="col">Rank</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <%- @cover_cats.each do |cover_cat| %>
          <tr>
            <td><%= cover_cat.code %></td>
            <td><%= cover_cat.name %></td>
            <td><%= cover_cat.proofing_code %></td>
            <td><%= cover_cat.rank %></td>
            <td>
              <ul class="usa-button-group float-right">
                <li class="usa-button-group__item">
                  <%= link_to "Edit", edit_cover_cat_path(cover_cat), class: "usa-button usa-button--outline" %>
                </li>
                <li class="usa-button-group__item">
                  <%= link_to "Delete", cover_cat, data: { confirm: "Are you sure?" }, method: "delete", class: "usa-button usa-button--secondary" %>
                </li>
              </ul>
            </td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
</div>