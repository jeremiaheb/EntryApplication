<%= form_for @habitat_type, html: { class: "usa-form maxw-full bg-base-lightest", autocomplete: "off" } do |f| %>
  <%= render "shared/uswds_error_messages", target: @habitat_type %>

  <fieldset class="usa-fieldset padding-1">
    <%= f.label :habitat_name, "Name", class: "usa-label" %>
    <%= f.text_field :habitat_name, class: "usa-input usa-input--xl", autocomplete: "off" %>

    <%= f.label :habitat_description, "Description", class: "usa-label" %>
    <%= f.text_field :habitat_description, class: "usa-input usa-input--xl", autocomplete: "off" %>

    <%= f.label :region, class: "usa-label" %>
    <%= f.select :region, HabitatType::VALID_REGIONS, { include_blank: true }, class: "usa-select usa-input--lg", autocomplete: "off" %>
    
    <%= f.submit class: "usa-button" %>
    <%= link_to "Cancel", habitat_types_path, class: "usa-button usa-button--outline" %>
  </fieldset>
<% end %>