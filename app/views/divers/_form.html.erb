<%= form_for @diver, html: { class: "usa-form maxw-full bg-base-lightest", autocomplete: "off" } do |f| %>
  <%= render "shared/uswds_error_messages", target: @diver %>

  <div class="grid-row padding-1">
    <div class="grid-col-12">
      <%= f.check_box :active, class: "usa-checkbox__input", autocomplete: "off" %>
      <%= f.label :active, "Active?", class: "usa-checkbox__label" %>

      <%= f.label :diver_number, class: "usa-label" %>
      <%= f.text_field :diver_number, class: "usa-input usa-input--md", required: true, autocomplete: "off" %>
      
      <%= f.label :diver_name, class: "usa-label" %>
      <%= f.text_field :diver_name, class: "usa-input usa-input--xl", required: true, autocomplete: "off" %>

      <%= f.label :username, class: "usa-label" %>
      <%= f.text_field :username, class: "usa-input usa-input--xl", required: true, autocomplete: "off" %>

      <%= f.label :email, class: "usa-label" %>
      <%= f.text_field :email, class: "usa-input usa-input--xl", required: true, autocomplete: "off" %>

      <%= f.label :agency, class: "usa-label" %>
      <%= f.text_field :agency, class: "usa-input usa-input--md "%>
      
      <%= f.label :password, "Password (leave blank to leave it unchanged)", class: "usa-label" %>
      <%= f.password_field :password, class: "usa-input usa-input--xl", autocomplete: "new-password" %>

      <%= f.label :password_confirmation, "New password confirmation (leave blank to leave it unchanged)", class: "usa-label" %>
      <%= f.password_field :password_confirmation, class: "usa-input usa-input--xl", autocomplete: "new-password" %>

      <%= f.label :role, class: "usa-label" %>
      <%= f.collection_select :role, Diver::ROLES, :to_s, :humanize, { include_blank: false }, class: "usa-select usa-input--md", autocomplete: "off" %>

      <%= f.label :boatlog_manager_id, class: "usa-label" %>
      <%= f.collection_select :boatlog_manager_id, BoatlogManager.all, :id, :agency_name, { include_blank: true }, class: "usa-select usa-input--xl", autocomplete: "off" %>

      <%= f.submit class: "usa-button" %>
      <%= link_to "Cancel", divers_path, class: "usa-button usa-button--outline" %>
    </div>
  </div>
<% end %>
