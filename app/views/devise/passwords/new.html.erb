<div class="grid-row">
  <div class="grid-col-12">
    <%= render "shared/nav_breadcrumbs", object: [["Login", new_session_path(resource_name)], ["Forgot Password", ""]] %>

    <div class="bg-base-lightest">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "usa-form maxw-full padding-1" }) do |f| %>
        <%= render "shared/uswds_error_messages", target: resource %>

        <fieldset class="usa-fieldset">
          <%= f.label :username, class: "usa-label margin-top-0" %>
          <%= f.text_field :username, class: "usa-input usa-input--lg", autofocus: true, autocomplete: "username" %>

          <%= f.submit "Email me reset instructions", class: "usa-button" %>
          <%= link_to "Cancel", new_session_path(resource_name), class: "usa-button usa-button--outline" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>