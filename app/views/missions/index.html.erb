<%= render "shared/nav_breadcrumbs", object: [["Missions", ""]] %>

<div class="grid-row">
  <div class="grid-col-12">
    <ul class="usa-button-group margin-bottom-1">
      <li class="usa-button-group__item">
        <%= link_to new_mission_path, class: "new-mission-button usa-button" do %>
          <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
            <%= tag.use href: image_path("@uswds/uswds/dist/img/sprite.svg#add") %>
          </svg>
          New Mission
        <%- end %>
      </li>
    </ul>

    <table class="width-full display">
      <thead>
        <tr>
          <th scope="col" class="width-card">Region</th>
          <th scope="col" class="width-card">Agency</th>
          <th scope="col" class="width-card">Project</th>
          <th scope="col" class="width-10">Active?</th>
          <th scope="col" class="width-auto">Managers</th>
          <th scope="col" class="width-card not-orderable not-searchable"></th>
        </tr>
      </thead>
      <tbody>
        <%- @missions.each do |mission| %>
          <tr>
            <td class="width-card"><%= mission.region.name %></td>
            <td class="width-card"><%= mission.agency.name %></td>
            <td class="width-card"><%= mission.project.name %></td>
            <td class="width-10"><%= mission.active %></td>
            <td class="width-auto"><%= mission.manager_divers.pluck(:diver_name).sort.join(", ") %></td>
            <td class="width-card">
              <ul class="usa-button-group float-right">
                <li class="usa-button-group__item">
                  <%= link_to "Edit", edit_mission_path(mission), class: "usa-button usa-button--outline" %>
                </li>
              </ul>
            </td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
</div>