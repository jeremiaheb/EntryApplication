<div class="appContainer">
  <div class="diverListContainer">
    <h1>Listing divers</h1>
    
      <table id="diversList", class="display table table-striped table-condensed ">
        <thead>
        <tr>
          <th>Diver Number</th>
          <th>Diver Name</th>
          <th>Active Diver?</th>
          <th>edit</th>
          <th>destroy</th>
        </tr>
      </thead>
      <tbody>
      <% @divers.each do |diver| %>
        <tr>
          <td><%= diver.diver_number %></td>
          <td><%= diver.diver_name %></td>
          <td><%= diver.active %></td>
          <td><%= link_to 'Edit', edit_diver_path(diver) %></td>
          <td><%= link_to 'Destroy', diver, data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
      <% end %>
      </tbody>
      </table>
  </div>
</div>

    <%= button_to('New Diver', new_diver_path, :method => "get", :class => 'btn btn-large btn-primary wrap')  %>   
<% if !current_diver.diver? %>
    <%= button_to('Download Current Diver List', divers_path(format: "xlsx"), :method => "get", :class => 'btn btn-small btn-primary')  %>   
<% end %>
