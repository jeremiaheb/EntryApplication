  <%= form_for @coral, html: { class: "usa-form maxw-full bg-base-lightest" } do |f| %>
    <%= render "shared/uswds_error_messages", target: @coral %>

    <fieldset class="usa-fieldset padding-1 padding-top-0">
      <%= f.label :code, class: "usa-label" %>
      <%= f.text_field :code, class: "usa-input usa-input--md" %>

      <%= f.label :scientific_name, class: "usa-label" %>
      <%= f.text_field :scientific_name, class: "usa-input usa-input--xl" %>

      <%= f.label :common_name, class: "usa-label" %>
      <%= f.text_field :common_name, class: "usa-input usa-input--xl" %>

      <%= f.label :short_code, class: "usa-label" %>
      <%= f.text_field :short_code, class: "usa-input usa-input--md" %>

      <%= f.label :rank, class: "usa-label" %>
      <%= f.number_field :rank, class: "usa-input usa-input--md", min: "1" %>

      <%= f.submit class: "usa-button" %>
      <%= link_to "Cancel", corals_path, class: "usa-button usa-button--outline" %>
    </fieldset>
  <% end %>