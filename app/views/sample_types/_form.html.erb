<%= form_for @sample_type, html: { class: "usa-form maxw-full bg-base-lightest", autocomplete: "off" } do |f| %>
  <%= render "shared/uswds_error_messages", target: @sample_type %>

  <div class="grid-row padding-1">
    <div class="grid-col-12">
      <%= f.label :sample_type_name, "Name", class: "usa-label margin-top-0" %>
      <%= f.text_field :sample_type_name, class: "usa-input usa-input--xl", autocomplete: "off" %>

      <%= f.label :sample_type_description, "Description", class: "usa-label" %>
      <%= f.text_field :sample_type_description, class: "usa-input usa-input--xl", autocomplete: "off" %>
      
      <%= f.submit class: "usa-button" %>
      <%= link_to "Cancel", sample_types_path, class: "usa-button usa-button--outline" %>
    </div>
  </div>
<% end %>